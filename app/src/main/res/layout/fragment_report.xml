<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff">

    <!-- Heading for the report section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you reporting?"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:id="@+id/rg_outage_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_house_outage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Power - Only My House/Building"
            android:textColor="#000000"
            android:buttonTint="#70d561" />

        <RadioButton
            android:id="@+id/rb_street_outage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Power - Entire Street/Block"
            android:textColor="#000000"
            android:buttonTint="#70d561" />

        <RadioButton
            android:id="@+id/rb_unstable_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unstable Power"
            android:textColor="#000000"
            android:buttonTint="#70d561" />

        <RadioButton
            android:id="@+id/rb_streetlight_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Streetlight Issue"
            android:textColor="#000000"
            android:buttonTint="#70d561" />
    </RadioGroup>

    <!-- Description Input Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What specific issue or damage have you observed?"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_damage_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe the damage"
        android:backgroundTint="#70d561"
    android:minHeight="48dp"
    android:textColor="#000000" />

    <!-- Address Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where is your concern located?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:backgroundTint="#70d561"
    android:minHeight="48dp"
    android:textColor="#000000" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#ffffff"
        android:backgroundTint="#228b22"
    android:layout_marginTop="50dp" />

</LinearLayout>
